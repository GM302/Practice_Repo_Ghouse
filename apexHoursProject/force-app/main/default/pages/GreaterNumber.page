<apex:page controller="GrNumberClass">
    
    <apex:form >
        <apex:pageBlock >
            
            <apex:pageBlockSection columns="1">
                
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Enter First Number"/>
                    <apex:inputText value="{!num1}"/>
                </apex:pageBlockSectionItem>
                
                  <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Enter Second Number"/>
                    <apex:inputText value="{!num2}"/>
                </apex:pageBlockSectionItem>
                
                  <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Enter Third Number"/>
                    <apex:inputText value="{!num3}"/>
                </apex:pageBlockSectionItem>
                
                <apex:selectRadio label="Greater or smaller number "  value="{!choice}" >
                    <apex:selectOption itemLabel="Greater" itemValue="Grt"/>
                    <apex:selectOption itemLabel="Smaller" itemValue="Sml"/>
                </apex:selectRadio>
                
                <apex:commandButton value="Display Greater Number" action="{!myMethod}"/>
               
                
                 <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Result"/>
                     <apex:outputText value="{!result}"/>
                </apex:pageBlockSectionItem>
            
            </apex:pageBlockSection>
        
        </apex:pageBlock>
    
    
    </apex:form>
    
    
</apex:page>